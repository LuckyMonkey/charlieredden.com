* {margin:0;border:0;padding:0;}
        html {font-size:100%;}
        body {font-family: 'Oxygen', sans-serif;flex-wrap: wrap;}
        h1, h2, h3, h4, h5, h6 {font-family: 'Oxygen', sans-serif;}
        
        h1 {
            font-size:5em;
            padding-top:10px;
            font-weight:bold;
        }
        h2 {
            font-size:3em;
            padding-top:10px;
            font-weight:bold;
        }
        h3 {
            font-size:2.5em;
            font-weight:300;
            opacity:0.6;
        }
        h4 {
            font-size:2em;
            font-style:italic;
        }
        h5 {
            font-size:2em;
            font-weight:bold;
        }
        h6 {
            font-size:1em;
        }
        header {
            background:#000;
            opacity:0.9;
        }
        
        .flex_row {display:flex;flex-direction:row;}
        .flex_row_rev {display:flex;flex-direction:row-reverse;}
        .flex_stack {display:flex;flex-direction:column;}
        .flex_around {justify-content:space-around;}
        .flex_wrap {flex-wrap: wrap;}
        
        .flex_left {justify-content: flex-start}
        .flex_right {justify-content: flex-end}
        
        .flex_half > :first-child, .flex_half > :nth-child(2) {flex:1}
        .flex_twoThirds > :nth-child(2), .flex_threeQuarters > :nth-child(2) {flex:1;}
        .flex_twoThirds > :nth-child(1) {flex:2;}
        .flex_threeQuarters > :nth-child(1) {flex:3;}
        
        .flex_content_row {display:flex;flex-direction:row;height:400px;padding:1em auto;}
        .flex_content_row .close {}
        header {flex:1 1 100%;height:9vh;padding:0 3em;border-style: solid;border-bottom: thick solid #333;}
        
        #brand {color:aquamarine;}
        #logo {display:flex;}
        #logo img {height:80%;align-self:center;}
        
        #headerButtons {list-style:none;height:100%;}
        #headerButtons li {align-self:center;border-radius:50%}
        #headerButtons div {background-clip:padding-box;width:3rem;height:3rem;border-radius:50%;text-align:center;}
        #headerButtons a:link {font-size:1.8rem;color:inherit;line-height:3rem;}
        #headerButtons a:visited {color:inherit;}
        #headerButtons div {color:#FFF;border: 2px solid #FFF;box-shadow: 0 0 0 2px #333;}
        #headerButtons div {background-color:#333;}
        #headerButtons div {transition: background-color 0.5s ease-in;}
        #headerButtons div {transition: color 0.5s ease-out;}
        #headerButtons div:hover {background-color: rgba(0,0,0,0);color:#222;}
        
        .fluffy > * {margin:0.25em;}
        .fluffier > * {margin:0.5em;}
        .fluffiest > * {margin:1em;}

        .goAway {display:none;}

        .obj {flex-direction:column;height:100%;overflow:hidden;margin:1em;background-color:rgba(0,0,0,0.8);}
        .obj h1 {margin:0 auto;color:white;padding:0.5em;}
        .obj > * {width:100%;height:100%;}
        #face {
            align-content:center;
            width:10em;height:10em;border:3px solid #FFF;box-shadow:0 0 0 2px #333;border-radius:2%}
        .gplay {background-color: rgba(10,10,10,0.9;);background-image:url("http://www.transparenttextures.com/patterns/random-grey-variations.png");           
        }
        aside {
        box-shadow: inset -10px 0px 10px -5px rgba(0,0,0,0.4);flex:1 1 0%;}
        
aside > div {
            height:98vh;
            align-self:stretch;
        padding:0.2em;}
main {padding-left:1em;flex:6;background-color:#FFF;}

        .infoContainer > a {
            display:flex;
            text-decoration:none;
            align-self:stretch;
            width:100%;
            padding:0.1em;
            color:white;border:1px solid black;
            background-color:rgba(0,0,0,0.7);
            margin-bottom:0.3em;}
        .infoContainer .fa {font-size:1.2em;}
        .info_location .fa {color:red;}
        .info_contact .fa {color:deepskyblue;}
        .info_resume .fa {color:brown;}
        .info_painting .fa {color:greenyellow;}
        .info_photos .fa {color:darkorange;}
        .info_travels .fa {color:forestgreen;}
        .info_webdev .fa {color: deeppink;}
        .info_links .fa {color: grey;}
        .info_ideas .fa {color:orange;}
        .info_shares .fa {color:skyblue;}
        .info_work .fa {color:white;}
        .info_birthday .fa {color:hotpink;}
        .info_things .fa {color:green;}
        .info_things {height:1.3em;overflow:hidden;}
        .info_things span {padding:0 0.1em;}
        .info_things span:nth-child(1) {color:indigo}
        .info_things span:nth-child(2) {color:crimson}
        .info_things span:nth-child(3) {color: darkgoldenrod}
        .info_things span:nth-child(4) {color: cadetblue}
        .info_things span:nth-child(5) {color: darkmagenta}
        .info_things span:nth-child(6) {color:forestgreen}
        
        .bump {height:1em;}
        
        .info_mention:after, .info_steam:after, .info_skype:after, .info_phone:after {display:none;color:#555;padding-right:2em;float:right;}
        .info_mention:after {content:'(Twitter)';}
        .info_steam:after {content:'(Steam)';}
        .info_skype:after {content:'(Skype)';}
        .info_phone:after {content:'(Voicemail)';}